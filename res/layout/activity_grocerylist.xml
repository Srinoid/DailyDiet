<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tvCalendarDietGroceryList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/calendarDiet"
        android:textSize="36sp"/>

    <TextView
        android:id="@+id/tvGroceryListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCalendarDietGroceryList"
        android:layout_centerHorizontal="true"
        android:text="@string/groceryList"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/tvToBuyGroceryList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvGroceryListTitle"
        android:text="@string/tobuy"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvToBuyGroceryList" >
    </ListView>

</RelativeLayout>
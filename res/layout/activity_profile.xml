<?xml version="1.0" encoding="utf-8"?> 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" > 
   
    <TextView
        android:id="@+id/tvTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/tvProfileHeader"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="32sp" 
        android:gravity="center"/> 
  
    <Button
        android:id="@+id/bEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Edit Profile" /> 
  
    <TextView
        android:id="@+id/tvAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvName"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="Edit"
        android:textAppearance="?android:attr/textAppearanceMedium" /> 
  
    <TextView
        android:id="@+id/tvHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvAge"
        android:layout_marginTop="31dp"
        android:text="Your"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:gravity="center" /> 
  
    <TextView
        android:id="@+id/tvWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvHeight"
        android:layout_marginTop="29dp"
        android:text="Profile."
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:gravity="center"/> 
  
    <TextView
        android:id="@+id/tvGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvWeight"
        android:layout_marginTop="23dp"
        android:text="Thank"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:gravity="center"/> 
  
    <TextView
        android:id="@+id/tvProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvGoal"
        android:layout_marginTop="26dp"
        android:text="You!"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:gravity="center"/> 
  
    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvTip"
        android:layout_marginTop="53dp"
        android:text="Please"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:gravity="center"/> 
   
</RelativeLayout>
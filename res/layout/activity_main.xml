<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bGroceryList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="@string/groceryList" />

    <Button
        android:id="@+id/bFavoriteDish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bGroceryList"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/textView1"
        android:text="@string/favoriteDishes" />

    <Button
        android:id="@+id/bHungry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bFavoriteDish"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="@string/imHungry" />

    <Button
        android:id="@+id/bProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bHungry"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="@string/yourProfile" />

    <TextView
        android:id="@+id/tvCalendarDietMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/calendarDiet"
        android:textSize="36sp" />

</RelativeLayout>